{
    "manifest_version": 3,
    "name": "Word Express",
    "version": "1.0",
    "description": "Display word definition of highlighted word",
    "action": {
        "default_popup" : "./html-css/popup.html"
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },    
    "permissions": [
        "storage",
        "contextMenus",
        "tts"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": [
                "<all_urls>"
            ]
        }
    ]

  }